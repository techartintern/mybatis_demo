<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mybatis_demo.mapper.AppUserMapper">

    <resultMap id="AppUserResultMap"
               type="AppUser">
        <id property="id" column="id"/>
        <result property="firstName" column="first_name"/>
        <result property="lastName" column="last_name"/>
        <result property="username" column="username"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findAll" resultMap="AppUserResultMap">
        SELECT * FROM app_user ORDER BY created_at DESC
    </select>

    <select id="findById" resultMap="AppUserResultMap">
        SELECT * FROM app_user WHERE id = #{id}
    </select>

    <select id="findByUsername" resultMap="AppUserResultMap">
        SELECT * FROM app_user WHERE username = #{username}
    </select>

    <insert id="insert" parameterType="AppUser" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO app_user (first_name, last_name, username)
        VALUES (#{firstName}, #{lastName}, #{username})
    </insert>

    <update id="update" parameterType="AppUser">
        UPDATE app_user
        SET first_name = #{firstName},
        last_name = #{lastName},
        username = #{username},
        updated_at = CURRENT_TIMESTAMP
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM app_user WHERE id = #{id}
    </delete>
</mapper>